<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    android:background="#1A1A2E"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvClienteVenta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Venta #12345"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#00F5FF"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/tvTotalVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF6B35"
                android:fontFamily="monospace" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvFechaVenta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="01/01/2024 10:30"
                android:textSize="14sp"
                android:textColor="#A0A0A0"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/tvProductosVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 producto(s)"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:fontFamily="monospace" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
